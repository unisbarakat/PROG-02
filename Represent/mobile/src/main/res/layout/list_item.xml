<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF094990"
            android:id="@+id/itemBackground">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/committiesList"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView"
                android:dividerHeight="1dp"
                android:divider="#9b9999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Committies:"
                android:id="@+id/textView"
                android:layout_gravity="right"
                android:gravity="center_horizontal"
                android:textColor="#ffeb00"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:paddingTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Recent Bills:"
                android:id="@+id/textView2"
                android:layout_gravity="right"
                android:gravity="center_horizontal"
                android:textColor="#ffeb00"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/committiesList"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_margin="20dp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/billsList"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:dividerHeight="1dp"
                android:divider="#9b9999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="End Date is: 1/1/2017"
                android:id="@+id/END"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingBottom="10dp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>